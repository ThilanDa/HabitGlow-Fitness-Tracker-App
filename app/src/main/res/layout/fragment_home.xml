<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:clipToPadding="false"
    android:paddingBottom="96dp"
    tools:context=".ui.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_header_bg"
            android:padding="20dp"
            android:orientation="vertical">
            <!-- Row: Greeting + Settings button at end -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tvGreeting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@android:color/white"
                    tools:text="Good morning!"/>
                <ImageButton
                    android:id="@+id/btnSettings"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_circle_light"
                    android:contentDescription="@string/nav_settings"
                    android:padding="8dp"
                    android:src="@android:drawable/ic_menu_manage"
                    android:tint="@android:color/white"/>
            </LinearLayout>
            <!-- Date below -->
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:alpha="0.9"
                tools:text="Sunday, September 21, 2025"/>
        </LinearLayout>

        <!-- Today's Mood card (blue) -->
        <LinearLayout
            android:id="@+id/cardTodayMood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_bg_blue"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="16dp"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TODAY'S MOOD"
                android:textStyle="bold"
                android:textColor="#1E88E5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/tvTodayMoodEmoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ™‚"
                    android:textSize="28sp"
                    android:layout_marginEnd="12dp"/>
                <TextView
                    android:id="@+id/tvTodayMoodLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#1E88E5"
                    android:text="OTHER"/>
                <TextView
                    android:id="@+id/tvTodayMoodPct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="#1E88E5"
                    android:text="0%"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Today's Progress title -->
        <TextView
            android:id="@+id/labelProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today's Progress"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"/>

        <!-- Progress Cards Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:id="@+id/cardHabits"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/card_bg_white"
                android:elevation="2dp"
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_agenda"
                        android:tint="@color/icon_blue"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Habits"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvHabitsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    tools:text="0/0"/>
                <ProgressBar
                    android:id="@+id/pbHabits"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="6dp"
                    android:progress="0"
                    android:max="100"/>
                <TextView
                    android:id="@+id/tvHabitsPct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0% Complete"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardHydration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/card_bg_white"
                android:elevation="2dp"
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_marginStart="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_mylocation"
                        android:tint="@color/icon_teal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hydration"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvHydrationCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    tools:text="0/8"/>
                <ProgressBar
                    android:id="@+id/pbHydration"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="6dp"
                    android:progress="0"
                    android:max="100"/>
                <TextView
                    android:id="@+id/tvHydrationPct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0% Complete"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Quick Actions title -->
        <TextView
            android:id="@+id/labelQuick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quick Actions"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"/>

        <!-- Quick Actions grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <LinearLayout
                android:id="@+id/qaViewTrends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_bg_yellow"
                android:elevation="2dp"
                android:padding="16dp"
                android:orientation="vertical">
                <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_info_details" android:tint="@color/icon_amber"/>
                <TextView android:text="Tips" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp"/>
                <TextView android:text="Health care tips" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Insights title -->
        <TextView
            android:id="@+id/labelInsights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Insights"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"/>

        <!-- Charts stacked vertically -->
        <LinearLayout
            android:id="@+id/chartsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Mood Pie -->
            <LinearLayout
                android:id="@+id/cardMoodPie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_bg_white"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Mood Emojis" android:textStyle="bold"/>
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieMood"
                    android:layout_width="match_parent"
                    android:layout_height="480dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Water Bar -->
            <LinearLayout
                android:id="@+id/cardWaterBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_bg_white"
                android:padding="8dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Water (7 days)" android:textStyle="bold"/>
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barWater"
                    android:layout_width="match_parent"
                    android:layout_height="480dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
