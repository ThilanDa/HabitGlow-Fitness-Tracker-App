<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_bg_white"
    android:padding="12dp"
    android:minHeight="72dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp">

    <TextView
        android:id="@+id/tvIcon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:background="@drawable/icon_tile_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <CheckBox
        android:id="@+id/cbDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tvIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/cbDone"
        app:layout_constraintTop_toTopOf="@id/cbDone"
        app:layout_constraintEnd_toStartOf="@id/tvStreak"
        android:layout_marginStart="12dp"/>

    <!-- Complete for today label (for non-timer habits) -->
    <TextView
        android:id="@+id/tvCompleteLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Complete for today"
        android:textColor="#99000000"
        android:textSize="13sp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/cbDone"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintEnd_toStartOf="@id/btnEdit"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"/>

    <!-- Barrier to place description below label -->
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barBelowControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tvCompleteLabel" />

    <!-- Streak label aligned with name -->
    <TextView
        android:id="@+id/tvStreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#FF7043"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/btnEdit"
        app:layout_constraintBaseline_toBaselineOf="@id/tvName"
        android:layout_marginEnd="4dp"
        android:text=""/>

    <ImageView
        android:id="@+id/btnEdit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_edit"
        app:tint="#5C6BC0"
        android:background="@null"
        android:padding="6dp"
        android:contentDescription="Edit"
        app:layout_constraintEnd_toStartOf="@+id/btnDelete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"/>

    <ImageView
        android:id="@+id/btnDelete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_delete_outline"
        app:tint="#E57373"
        android:background="@null"
        android:padding="6dp"
        android:contentDescription="Delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Description under name -->
    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#99000000"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/tvName"
        app:layout_constraintTop_toBottomOf="@id/barBelowControls"
        app:layout_constraintEnd_toStartOf="@id/btnEdit"
        android:layout_marginTop="2dp"/>

    <!-- Bottom divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#1F000000"
        app:layout_constraintStart_toStartOf="@id/tvName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDesc"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

