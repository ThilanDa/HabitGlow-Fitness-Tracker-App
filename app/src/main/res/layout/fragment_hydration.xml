<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:clipToPadding="false"
    android:paddingBottom="96dp"
    tools:context=".ui.HydrationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvHydroTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hydro Reminder"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <!-- Today's Intake card (hidden) -->
        <LinearLayout
            android:id="@+id/cardToday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_bg_blue"
            android:padding="16dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Intake"
                android:textColor="@color/color_primary"/>
            <TextView
                android:id="@+id/tvTodayIntake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="0ml"
                android:textColor="@color/color_primary"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/tvTodayPct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0% of goal"
                android:textColor="@color/color_primary"
                android:alpha="0.8"/>
        </LinearLayout>

        <!-- Vertical Water Gauge -->
        <LinearLayout
            android:id="@+id/waterGaugeSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_bg_white"
            android:padding="16dp"
            android:layout_marginTop="12dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="220dp">

                <!-- scale labels left/right -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="100%" android:gravity="center" android:textColor="#808080" android:visibility="gone"/>
                    <Space android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="75%" android:gravity="center" android:textColor="#808080"/>
                    <Space android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="50%" android:gravity="center" android:textColor="#808080"/>
                    <Space android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="25%" android:gravity="center" android:textColor="#808080" android:visibility="gone"/>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/gaugeProgress"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="120dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:max="100"
                    android:progress="0"
                    android:rotation="-90"
                    android:progressDrawable="@drawable/gauge_progress"/>

                <TextView
                    android:id="@+id/tvGaugePct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@color/color_primary"
                    android:background="@drawable/gauge_pct_bg"
                    android:padding="8dp"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <TextView
                android:id="@+id/tvGaugeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0ml / 2000ml"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/tvGaugeSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000ml to go!"
                android:textColor="#808080"
                android:layout_gravity="center"/>
        </LinearLayout>

        <!-- Goal Progress card -->
        <LinearLayout
            android:id="@+id/cardRemaining"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_bg_green"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goal Progress"
                android:textColor="#2E7D32"/>
            <TextView
                android:id="@+id/tvRemainingMl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="0ml"
                android:textColor="#2E7D32"
                android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="remaining"
                android:textColor="#2E7D32"
                android:alpha="0.8"/>
        </LinearLayout>

        

        <!-- Add Water Intake -->
        <LinearLayout
            android:id="@+id/cardAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_bg_white"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Water intake"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">
                <ImageButton
                    android:id="@+id/btnMinus"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/btn_circle_green"
                    android:src="@drawable/ic_minus"
                    android:tint="@android:color/white"
                    android:contentDescription="Decrease amount"
                    android:scaleType="center"
                    android:alpha="1.0"/>
                <TextView
                    android:id="@+id/tvAddAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="350"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="16dp"/>
                <ImageButton
                    android:id="@+id/btnPlus"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/btn_circle_green"
                    android:src="@drawable/ic_plus"
                    android:tint="@android:color/white"
                    android:contentDescription="Increase amount"
                    android:scaleType="center"
                    android:alpha="1.0"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ml"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add 350ml"
                android:layout_marginTop="8dp"
                style="@style/AppMaterialButtonStyle"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnQuickMinus300"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remove 350ml"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/ash_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnQuick250"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="250ml"
                    style="@style/AppMaterialButtonStyle"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnQuick500"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="500ml"
                    style="@style/AppMaterialButtonStyle"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnQuick750"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="750ml"
                    style="@style/AppMaterialButtonStyle"/>
            </LinearLayout>

            
        </LinearLayout>

        <!-- Reminder Settings -->
        <LinearLayout
            android:id="@+id/cardReminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_bg_white"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reminder Settings"
                    android:textStyle="bold"/>
                <Switch
                    android:id="@+id/swEnableReminders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Daily Goal -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:hintEnabled="true"
                android:hint="Daily Goal (ml)">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDailyGoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="2000"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Interval -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reminder Interval (minutes)"
                android:layout_marginTop="12dp"/>
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipInterval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:singleSelection="true"
                app:selectionRequired="true">
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipInt30"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipInt45"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipInt60"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipInt90"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="90"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipInt120"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120"/>
            </com.google.android.material.chip.ChipGroup>

            <!-- Start/End Time -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:hintEnabled="true"
                android:hint="Start Time">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="true"
                    android:hint="08:00"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:hintEnabled="true"
                android:hint="End Time">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEndTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="true"
                    android:hint="22:00"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSetReminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Reminder"
                android:layout_marginTop="12dp"
                style="@style/AppMaterialButtonStyle"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
